<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginCheck"
    android:background="@color/colorText">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="100dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Sign In Here"
                android:textSize="20dp"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_margin="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/editetext_shape"
                android:padding="10dp"
                android:id="@+id/emailHereXmllogin"
                android:hint="@string/hint_email"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/editetext_shape"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:hint="@string/hint_password"
                android:id="@+id/passwordHereXmllogin"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:padding="10dp"
                android:text="Sign In"
                android:textAllCaps="false"
                android:id="@+id/signInHere"
                android:background="@drawable/buttons_shape"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:id="@+id/moveSignUpPage"
                android:text="For new account ,Click here"
                android:textSize="15dp"
                android:textStyle="bold"/>
        </LinearLayout>

</ScrollView>